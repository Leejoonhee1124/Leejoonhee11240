exam.html

<!DOCTYPE html>
<html lang="ko">
<head>
<meta charset="UTF-8">
<title>시험 프로그램</title>
<style>
  body { font-family: Arial, sans-serif; max-width: 600px; margin: auto; padding: 20px; }
  .question { margin-bottom: 15px; }
  .option { display: block; margin: 5px 0; }
  button { margin-top: 10px; }
</style>
</head>
<body>
<h2>시험 프로그램</h2>
<div id="exam"></div>
<div id="score" style="margin-top:20px;"></div>

<script>
const questions = [
  {q:"B컷이 상징하는 의미는?", options:["실수한 장면","겉으로 보이지 않는 진짜 모습","편집 과정","친구 관계"], answer:1},
  {q:"SNS가 주인공에게 미친 영향은?", options:["진실만 보여줌","갈등을 만듦","시간 절약","사생활 보호"], answer:1},
  {q:"주제는 무엇인가?", options:["겉만 보고 판단하지 말자","완벽해야 한다","꿈은 반드시 이뤄진다","SNS는 항상 긍정적"], answer:0},
  {q:"회색 인간이 의미하는 것은?", options:["특별한 영웅","평범하게 사회에 휩쓸림","창의적인 인물","밝고 활기찬 인물"], answer:1},
  {q:"단편 형식의 장점은?", options:["사회 문제 표현 가능","모두 해피엔딩","글이 길어짐","인물 많음"], answer:0},
  {q:"이 책의 목적은?", options:["우리말의 아름다움 알리기","영어 단어 암기","한국사 설명","과학 용어 정리"], answer:0},
  {q:"외래어 과다 사용의 문제는?", options:["발음 쉬움","의미 혼란","기억 쉬움","문장 짧아짐"], answer:1}
];

let current = 0;
let score = 0;

function showQuestion() {
  if(current >= questions.length) {
    document.getElementById("exam").innerHTML = "<h3>시험 종료!</h3><p>점수: "+score+"/"+questions.length+"</p>";
    return;
  }
  let q = questions[current];
  let html = '<div class="question"><strong>문제 '+(current+1)+': '+q.q+'</strong><br>';
  q.options.forEach((opt,i)=>{
    html += `<button class="option" onclick="checkAnswer(${i})">${i+1}. ${opt}</button>`;
  });
  html += '</div>';
  document.getElementById("exam").innerHTML = html;
}

function checkAnswer(selected) {
  if(selected === questions[current].answer) score++;
  current++;
  showQuestion();
}

showQuestion();
</script>
</body>
</html>
